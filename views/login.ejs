<!DOCTYPE html>
<html lang="en">
<head>

    <%- include ("./partials/head.ejs")  %>

</head>

<body>
    <header>
        
        <%- include ("./partials/header.ejs")  %>

    </header>

    <main>
        <section class="login-title">
        <p class="session-title">Iniciar Sesión<p>
        <a class="session-register" href="register">Registrarme</a>
        </section>
        <section class="login-data">
            <form action="/" method="POST">
            <div class="login-type">
                <label for="email">*Email</label><br>
                <input class="table" type="email" id="user-email" name="user-email" placeholder="E-mail" value="">
            </div>
            <div class="login-type">
                <label for="password">*Contraseña</label><br>
                <input class="table" type="password" id="password" name="password" placeholder="Ingrese su contraseña" value="">
            </div>
            <div class="login-type-options">
                <input class="a" type="checkbox" id="recordarme" name="recordarme" value="recordarme">
                <label class="b" for="recordarme">Recordarme</label> 
                <a class="c" href="#">¿Olvidaste tu contraseña?</a>
            </div>
            <div class="login-type">
                <input class="bottom-log-in"type="submit" value="Iniciar sesión">
                </div>
            </form>
        </section>  
    </main>

    <footer class="footer">

        <%- include ("./partials/footer.ejs")  %>
        
    </footer>
</body>
</html>